<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER"
      prefHeight="653.0"
      prefWidth="641.0"
      spacing="20"
      style="-fx-background-color: #E3F2FD;"
      stylesheets="@Style.css"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.BodegaController">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40"/>
    </padding>

    <!-- 🟦 Título -->
    <Label text="Gestión de Bodegas"
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #0D47A1;">
        <font>
            <Font name="Arial" size="24"/>
        </font>
        <effect>
            <DropShadow color="#90CAF9" radius="3"/>
        </effect>
    </Label>

    <!-- 🧾 Campos de entrada -->
    <VBox spacing="10" alignment="CENTER">

        <Label text="Nombre de la Bodega:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="nombreField" prefWidth="300" promptText="nombre"/>

        <Label text="Capacidad (kg):" style="-fx-font-weight: bold;"/>
        <TextField fx:id="capacidadField" prefWidth="300" promptText="capacidad"/>

    </VBox>

    <!-- 📊 Tabla de bodegas -->
    <TitledPane text="Bodegas Registradas"
                expanded="true"
                collapsible="false">
        <VBox spacing="10" alignment="CENTER">
            <TableView fx:id="bodegaTable" prefHeight="200" prefWidth="700">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="100" text="ID"/>
                    <TableColumn fx:id="nombreColumn" prefWidth="250" text="Nombre"/>
                    <TableColumn fx:id="capacidadColumn" prefWidth="250" text="Capacidad (kg)"/>
                </columns>
            </TableView>
        </VBox>
    </TitledPane>

    <!-- ⚙️ Botones de acción -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="btnAdd" prefWidth="150" text="Agregar" styleClass="primary-button"/>
        <Button fx:id="btnUpdate" prefWidth="150" text="Actualizar" styleClass="info-button"/>
        <Button fx:id="btnDelete" prefWidth="150" text="Eliminar" styleClass="danger-button"/>
        <Button fx:id="btnFetch" prefWidth="150" text="Mostrar Todas" styleClass="neutral-button"/>
    </HBox>

</VBox>

