<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #E3F2FD;" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PedidoController">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #0D47A1;" text="Gestionar Pedidos">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#90CAF9" radius="3" />
        </effect>
    </Label>

    <!-- ComboBox en lugar de TextField para la FK proveedor -->
    <ComboBox fx:id="proveedorComboBox" prefWidth="300" promptText="Seleccionar Proveedor" />
    
    <DatePicker fx:id="fechaPicker" prefWidth="300" promptText="Fecha CreaciÃ³n" />
    <CheckBox fx:id="recibidoCheckBox" text="Recibido" />
    <TextField fx:id="observacionesField" prefWidth="300" promptText="Observaciones" />

    <TableView fx:id="pedidoTable" prefHeight="200" prefWidth="700">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
            <TableColumn fx:id="proveedorColumn" prefWidth="120" text="Proveedor" />
            <TableColumn fx:id="fechaColumn" prefWidth="100" text="Fecha" />
            <TableColumn fx:id="recibidoColumn" prefWidth="80" text="Recibido" />
            <TableColumn fx:id="observacionesColumn" prefWidth="200" text="Observaciones" />
        </columns>
    </TableView>

    <Button fx:id="btnAdd" prefWidth="300" text="Agregar Pedido" />
    <Button fx:id="btnUpdate" prefWidth="300" text="Actualizar Pedido" />
    <Button fx:id="btnDelete" prefWidth="300" text="Eliminar Pedido" />
    <Button fx:id="btnFetch" prefWidth="300" text="Mostrar Todos" />

</VBox>
